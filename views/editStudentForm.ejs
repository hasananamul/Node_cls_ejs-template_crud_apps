<body>
      
      <div class="container">
            <div class="row">
                  <div class="col-md-2"></div>
                  <div class="col-md-8">
                        <div class="card">
                          <div class="card">
                            <div class="card-header d-flex justify-content-between">
                                <h4 class="card-title"> Edit Student Form </h4>
                                <div class="add_student_btn">
                                    <a class="btn btn-md btn-primary" href="/student"> Back to dashbord </a>
                                </div>
                              </div>
                                    <div class="card-body">
                                      <form action="/student/editStudent/<%= edit_data._id %>" method="post" enctype="multipart/form-data" >
                                          <div class="mb-3">
                                            <label for="name" class="form-label"> Your name</label>
                                            <input type="text" value="<%= edit_data.name %> "
                                            class="form-control" name="name" id="name" >
                                          </div> 

                                          <div class="mb-3">
                                            <label for="email" class="form-label"> Your email</label>
                                            <input type="email" value="<%= edit_data.email %> "
                                            class="form-control" name="email" id="email" aria-describedby="helpId" placeholder="">
                                          </div>

                                          <div class="mb-3">
                                            <label for="phone" class="form-label"> Phone number</label>
                                            <input type="text" value="<%= edit_data.phone %> "
                                            class="form-control" name="phone" id="phone" aria-describedby="helpId" placeholder="">
                                          </div>

                                          <div class="mb-3">
                                            <label for="location" class="form-label"> Location</label>
                                            <input type="text" value="<%= edit_data.location %> "
                                            class="form-control" name="location" id="location" aria-describedby="helpId" placeholder="">
                                          </div>

                                          <div class="mb-3">
                                            <label for="photo" class="form-label"> Upload photo</label>
                                            <input type="text" value="<%= edit_data.photo %>"
                                            class="form-control" name="old_photo" id="photo" aria-describedby="helpId" placeholder="">
                                            
                                          </div>
                                          <div>
                                          <img style="width: 100%; height : 100%" src="../assets/upload/<%= edit_data.photo %>" alt="">
                                          </div>

                                          <div class="mb-3">
                                            <label for="photo" class="form-label"> Upload photo</label>
                                            <input type="file"
                                            class="form-control" name="photo" id="photo" aria-describedby="helpId" placeholder="">
                                          </div>

                                          <div class="text-center mb-3">
                                            <input type="submit"
                                            class="btn btn-md btn-primary w-100"id="submit_button" >
                                          </div>
                                      </form>                                  
                                    </div>
                              </div>
                        </div>
                  </div>
                  <div class="col-md-2"></div>
            </div>
      </div>
</body>